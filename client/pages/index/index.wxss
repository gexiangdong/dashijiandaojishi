.title{padding: 0 50rpx 0 30rpx}
.title .year{width:1%; display:inline-block; text-align:left; font-size:40rpx;}
.title .neweventbutton{width:99%; display:inline-block; text-align:right; color:#0000FF; font-size:60rpx; font-weight:bold;}
.calendar{width:100%;  height: 215px;}
.nodata {padding:100rpx 20rpx 150rpx 20rpx; text-align: center;line-height: 48rpx;font-size: 32rpx;color: #999;}
